{
  "name": "zscode-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "ZSCode Planning System - Claude Code project management plugin",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:cli": "npm run build --workspace=@zeliper/zscode",
    "build:mcp": "npm run build --workspace=@zeliper/zscode-mcp-server",
    "clean": "npm run clean --workspaces",
    "dev": "npm run dev --workspaces --if-present",
    "lint": "eslint packages/*/src --ext .ts",
    "test": "npm run test --workspaces --if-present"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Zeliper/zscode.git"
  },
  "keywords": [
    "claude-code",
    "mcp",
    "planning",
    "project-management",
    "task-management"
  ],
  "author": "Anthropic",
  "license": "MIT"
}
