{
  "name": "@zeliper/zscode-mcp-server",
  "version": "1.0.6",
  "description": "ZSCode MCP Server for Claude Code - Project planning and task management",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "zscode-mcp-server": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "clean": "node -e \"require('fs').rmSync('dist', { recursive: true, force: true })\"",
    "dev": "tsc --watch",
    "dev:server": "tsx src/index.ts",
    "dev:watch": "tsx --watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^4.0.16",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "zod": "^3.22.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "claude-code",
    "mcp",
    "model-context-protocol",
    "planning",
    "project-management"
  ],
  "author": "Zeliper",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Zeliper/zscode.git",
    "directory": "packages/mcp-server"
  }
}
